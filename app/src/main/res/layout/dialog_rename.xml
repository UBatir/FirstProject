<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="280dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tvTitleAtinOzgertiw"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="bottom"
        android:text="Atin ozgertiw"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvRename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvTitleAtinOzgertiw"
        app:layout_constraintEnd_toEndOf="@id/tvTitleAtinOzgertiw"
        app:layout_constraintTop_toBottomOf="@id/tvTitleAtinOzgertiw"
        android:layout_marginTop="@dimen/margin_standard"
        android:textSize="16sp"
        android:text="Azamat"
        android:background="#E0E0E0"/>

    <EditText
        android:id="@+id/etRename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvRename"
        app:layout_constraintEnd_toEndOf="@id/tvRename"
        app:layout_constraintTop_toBottomOf="@id/tvRename"
        android:layout_marginTop="@dimen/margin_standard"
        android:textSize="18sp"
        android:text="Azamat"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etRename"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/margin_standard">

        <Button
            android:id="@+id/btnBiykarlaw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biykarlaw"
            android:background="#FAFAFA"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnAtinOzgertiw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atin ozgertiw"
            android:background="#FAFAFA"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>